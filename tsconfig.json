{
    "compilerOptions": {
        /* Language and Environment */
        "target": "ES2021",
        "module": "CommonJS",
        "rootDir": "./src",

        /* Emit */
        "outDir": "./dist",

        /* Interop Constraints */
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,

        /* Type Checking */
        "strict": true,
        "noImplicitAny": true,

        /* Completeness */
        "skipLibCheck": true
    },
    "include": ["src"],
    "exclude": ["node_modules"]
}
